{
  "manifest_version": 2,
  "name": "Proven",
  "description": "An alternative to Twitter's verified accounts based on Keybase",
  "version": "1.4",
  "icons": {
    "32": "proven.svg",
    "48": "proven.svg",
    "96": "proven.svg",
    "128": "proven.svg",
    "512": "proven.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*"],
      "js": ["index.js"]
    }
  ],
  "permissions": [
    "https://keybase.io/_/api/1.0/*",
    "webRequest"
  ]
}
