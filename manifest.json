{
  "manifest_version": 2,
  "name": "Proven",
  "description": "An alternative to Twitter's verified accounts based on Keybase",
  "version": "1.7",
  "icons": {
    "32": "icons/proven32.png",
    "48": "icons/proven48.png",
    "96": "icons/proven96.png",
    "128": "icons/proven128.png",
    "512": "icons/proven512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "permissions": [
    "https://keybase.io/_/api/1.0/*",
    "webRequest"
  ]
}
